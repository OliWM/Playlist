{
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "/opt/homebrew/opt/llvm/bin/clang",
           "args": [
            "@compile_flags.txt",
            "./src/main.c",
            "./src/singly_linked_list.c",
            "-I",
            "./include",
            "-o",
            "main"
        ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./main",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "build"
            ],
        },
    ],
    "version": "2.0.0",
}